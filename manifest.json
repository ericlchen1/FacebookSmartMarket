{
    "name": "Facebook Smart Marketplace",
    "description": "A web extension which parses descriptions of Facebook Marketplace items to show the true price of items",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "./images/favion.png",
            "32": "./images/favion.png",
            "48": "./images/favion.png",
            "128": "./images/favion.png"
        }
    },
    "icons": {
        "16": "./images/favion.png",
        "32": "./images/favion.png",
        "48": "./images/favion.png",
        "128": "./images/favion.png"
    },
    "permissions": ["storage", "activeTab", "scripting"]
}